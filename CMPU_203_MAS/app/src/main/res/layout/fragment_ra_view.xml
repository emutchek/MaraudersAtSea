<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="170dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="135dp"
        app:layout_constraintBottom_toTopOf="@+id/RAfound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/exitRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="600dp"
        android:backgroundTint="@color/trans"
        android:contentDescription="exit button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exitbutton" />

    <TextView
        android:id="@+id/RAfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="135dp"
        android:fontFamily="serif"
        android:text="@string/RAfound"
        android:textColor="#D6CECE"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/grabRA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/grabRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="135dp"
        android:backgroundTint="#E3D3D3"
        android:text="@string/pickup"

        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RAfound" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="172dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RAfound">

        <ImageButton
            android:id="@+id/rope"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:backgroundTint="@color/trans"
            android:contentDescription="rope button"
            android:visibility="invisible"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ropebutton" />

        <ImageButton
            android:id="@+id/wood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"

            android:backgroundTint="@color/trans"
            android:contentDescription="wood button"
            android:visibility="invisible"
            app:srcCompat="@drawable/woodbutton" />

        <ImageButton
            android:id="@+id/medicine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:backgroundTint="@color/trans"
            android:contentDescription="medicine button"
            android:visibility="invisible"
            app:srcCompat="@drawable/medbutton" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
